<%- include('../partials/header.ejs') %>

<div class="container m-5">
    <a class="btn btn-warning ms-5" href="/authors/create">Create +</a>
    
    <div class="w-75 mt-5 m-auto">
        <table class="table bg-white shadow p-3 rounded">
            <thead>
                <tr>
                    <th scope="col">Name</th>
                    <th scope="col">Email</th>
                    <th scope="col">Actions</th>
                </tr>
            </thead>
            <tbody>
                <% authors.forEach(author => { %>
                    <tr>
                        <td><%= author.name %></td>
                        <td><%= author.email ? author.email : '-' %></td>
                        <td>
                            <a href="/authors/edit/<%= author.id %>" class="btn btn-primary">Edit</a>
                            <form action="/authors/delete/<%= author.id %>" method="POST" class="d-inline">
                                <button type="submit" class="btn btn-danger">Delete</button>
                            </form>    
                        </td>
                    </tr>             
                <% }) %>
            </tbody>
        </table>
    </div>
</div>

<%- include('../partials/footer.ejs') %>